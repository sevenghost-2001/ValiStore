@*@model IEnumerable<ValiStore.Models.TKhachHang>*@
@using X.PagedList.Mvc.Core
@using ValiStore.Models
@model X.PagedList.IPagedList<TKhachHang>

@{
    ViewData["Title"] = "DanhsachKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DanhsachKhachHang</h1>

@*<button>
    <a class="btn-create" asp-action="ThemKhachHangMoi">Create New</a>
</button>*@
<a class="btn btn-primary btn-lg active btn_create" role="button" aria-pressed="true" asp-action="ThemKhachHangMoi">Create New</a>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class ="table-warning">
            <th>
                Tên Khách Hàng
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                SĐT
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Ảnh đại diện
            </th>
            <th>
                UserName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            String @cls = "table-success";
        }
@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
        <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenKhachHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhDaiDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                    <a asp-action="SuaKhachHang" asp-route-maKhanhHang="@item.MaKhanhHang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKhanhHang">Details</a> |
                    <a asp-action="XoaKhachHang" asp-route-maKhanhHang="@item.MaKhanhHang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
