@*@model IEnumerable<ValiStore.Models.TLoaiDt>*@
@using X.PagedList.Mvc.Core
@using ValiStore.Models
@model X.PagedList.IPagedList<TLoaiDt>

@{
    ViewData["Title"] = "DanhsachDoiTuong";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DanhsachDoiTuong</h1>

@*<button>
    <a class="btn-create" asp-action="ThemDoiTuongMoi">Create New</a>
</button>*@
<a class="btn btn-primary btn-lg active btn_create" role="button" aria-pressed="true" asp-action="ThemDoiTuongMoi">Create New</a>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class ="table-warning">
            <th>
                Tên Loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            String @cls = "table-success";
        }
@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <a asp-action="SuaDoiTuong" asp-route-maDT="@item.MaDt">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaDt">Details</a> |
                <a asp-action="XoaDoiTuong" asp-route-maDT="@item.MaDt">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
