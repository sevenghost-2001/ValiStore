@model ValiStore.Models.TKhachHang
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemKhachHangMoi";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h1>ThemKhachHangMoi</h1>

<h4>KhachHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemKhachHangMoi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKhanhHang" class="control-label">Mã Khách Hàng</label>
                <input asp-for="MaKhanhHang" class="form-control" />
                <span asp-validation-for="MaKhanhHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">UserName</label>
                <select asp-for="Username" class="form-control" asp-items="ViewBag.Username"></select>
            </div>
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Tên Khách Hàng</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label">Ngày Sinh</label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label">Số Điện Thoại</label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiKhachHang" class="control-label">Loại Khách Hàng</label>
                @*<input asp-for="LoaiKhachHang" class="form-control" />*@
                @*<span asp-validation-for="LoaiKhachHang" class="text-danger"></span>*@
                <select asp-for="LoaiKhachHang" class="form-control" asp-items="ViewBag.LoaiUser"></select>
            </div>
            <div class="form-group">
                <label asp-for="AnhDaiDien" class="control-label">Anh Đại Diện</label>
                <input asp-for="AnhDaiDien" class="form-control" />
                <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label">Ghi Chú</label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

