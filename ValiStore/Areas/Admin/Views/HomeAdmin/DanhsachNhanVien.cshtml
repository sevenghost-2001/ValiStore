@*@model IEnumerable<ValiStore.Models.TNhanVien>*@
@using X.PagedList.Mvc.Core
@using ValiStore.Models
@model X.PagedList.IPagedList<TNhanVien>
@{
    ViewData["Title"] = "DanhsachNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DanhsachNhanVien</h1>

<p>
    <a asp-action="ThemNhanVienMoi">Create New</a>
</p>

<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Tên Nhân Viên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                SĐT
            </th>
            <th>
                SĐT2
            </th>
            <th>
                Địa Chị
            </th>
            <th>
                Chức Vụ
            </th>
            <th>
                Ảnh Đại Diện
            </th>
            <th>
                UserName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            String @cls = "table-success";
        }
@foreach (var item in Model) {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }
        <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhDaiDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                <a asp-action="SuaNhanVien" asp-route-maNhanVien="@item.MaNhanVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhanVien">Details</a> |
                <a asp-action="XoaNhanVien" asp-route-maNhanVien="@item.MaNhanVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
